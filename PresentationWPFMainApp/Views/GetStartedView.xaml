<UserControl x:Class="PresentationWPFMainApp.Views.GetStartedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:local="clr-namespace:PresentationWPFMainApp.Views"                          
             xmlns:viewmodels="clr-namespace:PresentationWPFMainApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:GetStartedViewModel}"
    
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400">
    

    <Border Background="CadetBlue" CornerRadius="0 0 25 25">
        <Grid>
            <StackPanel VerticalAlignment="Center">
                <!--Image Source="../Resources/Images/contact-list_new.png"/-->
                <TextBlock>
                     <Run Text="Welcome to your Contact list!" />
                     <LineBreak />
                     <Run Text="The easy way to keep track" />
                     <LineBreak />
                     <Run Text="of all your contacts." />
                </TextBlock>     
            </StackPanel>

            

        </Grid>
    </Border>
    
</UserControl>
